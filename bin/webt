#!/usr/bin/env node

/**
 * Module dependencies.
 */

var fs = require('fs');
var Template = require('../lib/template');

/**
 * Arguments.
 */

var args = process.argv.slice(2);

/**
 * Executable version.
 */

var version = require('../package.json').version;

/**
 * Destination path.
 */

var dest = process.cwd();

/**
 * Usage information.
 */

var usage = [
  '',
  '  Usage: webt [options] [path]',
  '',
  '  Options:',
  '',
  '    -V, --version           Output the current version',
  '    -h, --help              Display help information',
  '    Optional target path',
  ''
].join('\n');


/**
 * Require argument for `flag`.
 */

function requireArgument(flag) {
  if (args.length) {
    return args.shift();
  } else {
    console.error(flag + ' requires an argument');
    process.exit(1);
  }
}

// parse arguments

var arg;
while (args.length) {
  arg = args.shift();
  switch (arg) {
  case '-h':
  case '--help':
    console.log(usage);
    process.exit();
    break;
  case '-v':
  case '--version':
    console.log(version);
    process.exit();
    break;
  default:
    dest = arg;    
  }
}

// create template

var tmpl = Template.create();

// dest

try {
  fs.mkdirSync(dest, 0775);
} catch (err) {
  //ignore 
}

tmpl.init(dest);
